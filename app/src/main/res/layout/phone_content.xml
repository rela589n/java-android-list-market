<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="Height:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneHeightLabel" android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneHeight" android:layout_weight="1"/>
    <TextView
            android:text="Width:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneWidthLabel" android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneWidth" android:layout_weight="1"/>
    <TextView
            android:text="Battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneBatteryLabel" android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneBattery" android:layout_weight="1"/>
</LinearLayout>