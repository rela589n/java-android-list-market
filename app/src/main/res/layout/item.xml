<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="115dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/productName" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/productsCount" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/productPrice" android:layout_weight="1"/>
        <CheckBox
                android:text="In stock"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/productInStock" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Дата:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/dateLabel" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/productDate" android:layout_weight="1"/>
        <TextView
                android:text="Категорія: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/productCategoryLabel" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/productCategoryName" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/dynamic_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/productDescription" android:layout_weight="1"/>
</LinearLayout>